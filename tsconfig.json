{
    "compilerOptions": {
      "target": "ES2020",
      "lib": ["ES2023", "DOM", "DOM.Iterable"],
      "jsx": "react-jsx",
      "module": "ESNext",
      "moduleResolution": "Bundler",
      "baseUrl": ".",
      "paths": { "@/*": ["src/*"] },
      "strict": true,
      "skipLibCheck": true,
      "resolveJsonModule": true,
      "noEmit": true
    },
    "include": ["src"]
  }
  